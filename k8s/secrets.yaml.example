# k8s/secrets.yaml.example
# ⚠️ NUNCA commitear este archivo con valores reales
# Copiar a secrets.yaml y rellenar con valores reales
# Luego aplicar: kubectl apply -f k8s/secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: clinical-assistant-secrets
  namespace: production
type: Opaque
stringData:
  # HuggingFace token para descargar modelos
  hf-token: "hf_REPLACE_WITH_YOUR_TOKEN"
  
  # JWT secret (generarlo con: openssl rand -hex 32)
  jwt-secret: "REPLACE_WITH_RANDOM_STRING_32_CHARS"
  
  # JWT refresh secret
  jwt-refresh-secret: "REPLACE_WITH_RANDOM_STRING_32_CHARS"
  
  # Database password (si se usa)
  db-password: "REPLACE_WITH_DB_PASSWORD"
  
  # Redis password (si se usa)
  redis-password: "REPLACE_WITH_REDIS_PASSWORD"

---
# Para crear el secret desde command line:
# kubectl create secret generic clinical-assistant-secrets \
#   --namespace=production \
#   --from-literal=hf-token='hf_xxx' \
#   --from-literal=jwt-secret='xxx' \
#   --from-literal=jwt-refresh-secret='xxx' \
#   --dry-run=client -o yaml > k8s/secrets.yaml
